<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_store"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        //bar
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_store"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />

            </android.support.design.widget.AppBarLayout>
        </LinearLayout>
        //content_main
        <LinearLayout
            android:layout_weight="8.3"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <include
                layout="@layout/content_main_store"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        //Navigation bottom
        <LinearLayout
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
                android:id="@+id/navigation"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </com.aurelhubert.ahbottomnavigation.AHBottomNavigation>
        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view_store"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true" >
        <LinearLayout
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            //4
            <LinearLayout
                android:paddingTop="30dp"
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/com_facebook_button_send_background"
                android:weightSum="6"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_weight="4.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/imgPhotoStore_mainstore"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/avatar"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/txtstorename_mainuser"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Kun Park" />

                    <TextView
                        android:id="@+id/txtsumshipped_mainstore"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="168 Shipped"
                        android:typeface="serif" />
                </LinearLayout>
            </LinearLayout>
            //5
            <LinearLayout
                android:paddingBottom="20dp"
                android:paddingTop="30dp"
                android:orientation="vertical"
                android:weightSum="4"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:paddingRight="20dp"
                    android:paddingLeft="10dp"
                    android:weightSum="5"
                    android:orientation="horizontal"
                    android:background="@drawable/back_ground_edittext"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:padding="15dp"
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/icon_report"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="3.7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:gravity="center_vertical"
                            android:typeface="serif"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:text="Report"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:paddingRight="20dp"
                    android:paddingLeft="10dp"
                    android:weightSum="5"
                    android:orientation="horizontal"
                    android:background="@drawable/back_ground_edittext"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:padding="15dp"
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_category" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="3.7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:gravity="center_vertical"
                            android:typeface="serif"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:text="My Category"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:paddingRight="20dp"
                    android:paddingLeft="10dp"
                    android:weightSum="5"
                    android:orientation="horizontal"
                    android:background="@drawable/back_ground_edittext"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:padding="15dp"
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_product" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="3.7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:gravity="center_vertical"
                            android:typeface="serif"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:text="Create Product"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:paddingRight="20dp"
                    android:paddingLeft="10dp"
                    android:weightSum="5"
                    android:orientation="horizontal"
                    android:background="@drawable/back_ground_edittext"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:padding="15dp"
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/icon_status"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="3.7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Status"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:typeface="serif" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
            //2
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/sign_up"
                    android:layout_gravity="bottom"
                    />
            </LinearLayout>

        </LinearLayout>
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
