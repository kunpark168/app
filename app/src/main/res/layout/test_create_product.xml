<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:weightSum="13.5"

    android:padding="16dp"
    android:background="@color/white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Tạo sản phẩm"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_marginTop="4dp"
        android:layout_height="0dp"
        android:layout_weight="4"
        app:srcCompat="@drawable/bg_login_activity"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginBottom="20dp"/>

    <Spinner
        android:layout_marginTop="4dp"
        android:background="@drawable/test_spinner_border"
        android:id="@+id/cbbox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:background="@drawable/test_bg_buttton"
        android:ems="10"
        android:gravity="center"
        android:hint="Tên sản phẩm"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15sp" />

    <EditText
        android:layout_marginTop="8dp"
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/test_bg_edittext"
        android:ems="10"

        android:inputType="textPersonName"
        android:layout_weight="2"/>

    <EditText
        android:layout_marginTop="8dp"
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Giá VND"
        android:layout_weight="1"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:background="@drawable/test_bg_buttton"
        android:gravity="center"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"

        >
        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/test_bg_btn"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="TẠO"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/white"/>
    </android.support.v7.widget.CardView>


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />




</LinearLayout>