<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="com.example.win81version2.orderdrink.product.view.CreateProductFragment">

    <!-- TODO: Update blank fragment layout -->
    //Spinner Category 1
    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </Spinner>
    </android.support.v7.widget.CardView>
    //1
    <EditText
        android:id="@+id/edtProductName"
        android:hint="Product Name"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    //3
    <EditText
        android:id="@+id/edtDescribeProduct"
        android:layout_weight="3"
        android:gravity="top"
        android:hint="Describe Product"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textMultiLine" />
    //1
    <EditText
        android:inputType="number"
        android:id="@+id/edtPrice"
        android:layout_weight="1"
        android:hint="15.000 vnd  (Nhập 15)"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <TextView
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <LinearLayout
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/imgProduct"
            android:src="@drawable/store"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btnChooseimg"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/white"
            android:text="Chọn ảnh"
            android:background="@color/colorPrimaryDark"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <Button
        android:id="@+id/btnCreateProduct"
        android:text="Create Product"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp" />


</LinearLayout>
