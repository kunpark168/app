<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/flash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.win81version2.orderdrink.Login.view.LoginActivity">
    //Logo 4
    <LinearLayout
        android:layout_weight="3.6"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </LinearLayout>
    //Form Op-int 2

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:weightSum="2">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/back_ground_edittext">

        <EditText
            android:id="@+id/edtemail_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:hint="Email"
            android:textColor="@color/white"
            android:theme="@style/Theme.App.Base" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/back_ground_edittext">

            <EditText
                android:id="@+id/edtpassword_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="Password"
                android:textColor="@color/white"
                android:theme="@style/Theme.App.Base" />
        </LinearLayout>
    </LinearLayout>
    //Text Sign-up and forgot password 1
    <LinearLayout
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/txtsignup_login"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Create new account"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txtforgotpassword"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Forgot Password ?"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    //Button Login 1
    <LinearLayout
        android:paddingTop="20dp"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:id="@+id/btnlogin"
            android:background="@drawable/btn_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    //Line
    <LinearLayout
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/line_or"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="OR"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="Login with"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    //Image Login Facebook and Google
    <LinearLayout
        android:weightSum="2"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:layout_weight="1.4"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/imgloginfb"
            android:layout_marginLeft="50dp"
            android:src="@drawable/fb_icon"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/imglogingoogle"
            android:layout_marginRight="50dp"
            android:src="@drawable/google_icon"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
